#include <stdio.h>

void question_2() {

	int max_number = 10000;
	int min_number = 0;
	int one_the_number = 0;
	int not_infinite_cycle = 0;
	int n;
	int number_count = 0;


	for (int turn = 0; turn = max_number; turn++) {
		if (turn % 2 == 0) {
			n = turn;
			while (one_the_number < 3) {
				if (n % 2 == 0) {
					n = n / 2;
				}
				else {
					n = (n * 3) + 1;
				}
				if (n == 1) {
					one_the_number += 1;
				}
				if (n == turn) {
					printf("%d\n", n);
					infinite_cycle = 1;
					goto end;
				}
				printf("%d\n", n);
			}
		end:
			if (not_infinite_cycle == 1) {
				//printf("입력된 숫자로 되돌아와 프로그램을 종류 합니다.");
				number_count += 1;
			}
			else {
				printf("입력된 숫자로 되돌아가지 않고 무한히 반복되어 프로그램을 종류합니다.");
			}
		}
		not_infinite_cycle = 0;
	}
	printf("%d\n", number_count);
}

#include <stdio.h>


int Collatz_distinguish(int N) {

	int one_the_number = 0;
	int not_infinite_cycle = 0;
	int n;
	//printf("adadad");


	n = N;
	while (one_the_number < 3) {
		if (n % 2 == 0) {
			n = n / 2;
		}
		else {
			n = (n * 3) + 1;
		}
		if (n == 1) {
			one_the_number += 1;
		}
		if (n == N) {
			//printf("%d\n", n);
			not_infinite_cycle = 1;
			goto end;
		}
	}
	//one_the_number = 0;

	end:
	if (not_infinite_cycle == 1) {
		//printf("입력된 숫자로 되돌아와 프로그램을 종류 합니다.");
		return 1;
	}
	else {
		//printf("입력된 숫자로 되돌아가지 않고 무한히 반복되어 프로그램을 종류합니다.");
		return 0;
	}
}


void main() {
	int max_number = 10;
	int min_number = 2;
	int number_count = 0;

	for (int turn = min_number; turn <= max_number; turn++) {
		if (turn % 2 == 0) {
			if (Collatz_distinguish(turn) == 1) {
				number_count += 1;
				//printf("%d\n", turn);
				//printf("adadad");
			}
		}
		//printf("%d\n", turn);

	}
	printf("%d\n", number_count);
	//printf("adadad");

}

