
#include <stdio.h>

void main() {

	int n;
	int one_the_number = 0;
	scanf_s("%d", &n);

	
	n = (n * 3) + 1;
	print("%d", n);

	while (one_the_number < 3) {
		if (n % 2 == 0) {
			n = n / 2;
		}
		else {
			n = (n * 3) + 1;
		}
		if (n == 1) {
			one_the_number += 1;
		}
		print("%d", n);

		
	}
}


#include <stdio.h>

void main() {

	int n;
	int one_the_number = 0;
	printf("숫자를 입력해 주세요.");
	scanf_s("%d", &n);

	
	n = (n * 3) + 1;
	printf("%d", n);

	while (one_the_number < 3) {
		if (n % 2 == 0) {
			n = n / 2;
		}
		else {
			n = (n * 3) + 1;
		}
		if (n == 1) {
			one_the_number += 1;
		}
		printf("%d", n);

		
	}
}

#include <stdio.h>

void main() {

	int n = 0;
	int N ;
	int one_the_number = 0;

	//N = n * 1;


	printf("숫자를 입력해 주세요.");
	scanf_s("%d", &n);
	printf("%d\n", n);
	
	N = n;

	n = (n * 3) + 1;
	printf("%d\n", n);


	while (one_the_number < 3) {
		if (n % 2 == 0) {
			n = n / 2;
		}
		else {
			n = (n * 3) + 1;
		}
		if (n == 1) {
			one_the_number += 1;
		}
		if (n == N) {
			goto end;
		}
		printf("%d\n", n);

		
	}
	end:
}
