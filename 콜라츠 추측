
#include <stdio.h>

void main() {

	int n;
	int one_the_number = 0;
	scanf_s("%d", &n);

	
	n = (n * 3) + 1;
	print("%d", n);

	while (one_the_number < 3) {
		if (n % 2 == 0) {
			n = n / 2;
		}
		else {
			n = (n * 3) + 1;
		}
		if (n == 1) {
			one_the_number += 1;
		}
		print("%d", n);

		
	}
}
