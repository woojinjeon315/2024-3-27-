void main() {
	int max_number = 100;
	int min_number = 2;
	int number_count = 0;

	for (int turn = min_number; turn <= max_number; turn++) {
		if (turn % 2 == 0) {
			if (Collatz_distinguish(turn) == 1) {
				number_count += 1;
				printf("%d\n", turn);
				//printf("adadad");
			}
		}
		//printf("%d\n", turn);

	}
	printf("%d\n", number_count);
	//printf("adadad");

}


#include <stdio.h>

int Collatz_distinguish(int n) {

	int one_the_number = 0;
	int infinite_cycle = 0;
	//int n;
	int N;
	//printf("adadad");

	N = n;

	while (one_the_number < 3) {
		if (n % 2 == 0) {
			n = n / 2;
		}
		else {
			n = (n * 3) + 1;
		}
		if (n == 1) {
			one_the_number += 1;
		}
		if (n == N) {
			//printf("%d\n", n);
			infinite_cycle = 1;
			goto end;
			//break;
		}
		printf("%d\n", n);

	}
end:
	printf("adada");
	return infinite_cycle;
}


void main() {


	int n = 0;
	int N ;
	int one_the_number = 0;
	int not_infinite_cycle = 0;


	printf("숫자를 입력해 주세요.");
	scanf_s("%d", &n);
	printf("%d\n", n);
	

	N = n;
	n = (n * 3) + 1;
	printf("%d\n", n);

	/*Collatz_distinguish(n);*/


	if (Collatz_distinguish(n) == 1) {
		printf("입력된 숫자로 되돌아와 프로그램을 종류 합니다.");
	}
	else if (Collatz_distinguish(n) == 0){
		printf("입력된 숫자로 되돌아가지 않고 무한히 반복되어 프로그램을 종류합니다.");
	}

}

