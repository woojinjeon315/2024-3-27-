void game_play() { // 0 마인 없음, 1 ~ 8 근처 마인수, 9 마인
	int** array = (int**)malloc(x_size * sizeof(int*));
	int game_size = x_size * y_size;
	int array_turn = 0;
	int mine_turn = 0;
	int repetition = 0;

	// 각 행에 열 동적 할당
	for (int turn = 0; turn < y_size; turn++) {
		array[turn] = (int*)malloc(y_size * sizeof(int));
	}

	// 배열 사용
	//array[1][2] = 10;  // 예시로 값 할당
	//printf("array[1][2] = %d\n", array[1][2]);

	// 메모리 해제
	for (int i = 0; i < y_size; i++) {
		free(array[i]);
	}
	free(array); 

	while (repetition < 2) {
		for (int x_turn = 0; x_turn < x_size; x_turn++) {
			for (int y_turn = 0; y_turn < y_size; y_turn) {
				if (mine_list[mine_turn] == array_turn && repetition == 0) {
					array[y_turn][x_turn] = 9;
					mine_turn += 1;
				}
				if (array[y_turn][x_turn] != 9 && repetition == 1) {
					if (array[y_turn + 1][x_turn]) {

					}
					if (array[y_turn][x_turn + 1]) {

					}
					if (array[y_turn + 1][x_turn + 1]) {

					}
					if (array[y_turn - 1][x_turn]) {

					}
					if (array[y_turn][x_turn - 1]) {

					}
					if (array[y_turn - 1][x_turn - 1]) {

					}


				}
				array_turn += 1;
			}
		}
		repetition += 1;
		mine_turn = 0;
	}

}



void main() {
	int stop = 0;
	while (stop == 0) {
		start_select = start();
		if (start_select == 1) {
			//game_play();
			stop = 1;
		}
		else if (start_select == 2) {
			setting();
		}
		else if (start_select == 3) {
			puts("프로그램을 종료 합니다.");
			return;
		}
	}


}
