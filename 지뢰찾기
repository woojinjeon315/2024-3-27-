void main() {
	int stop = 0;
	while (stop == 0) {
		start_select = start();
		if (start_select == 1) {
			//game_play();
			stop = 1;
		}
		else if (start_select == 2) {
			setting();
		}
		else if (start_select == 3) {
			puts("프로그램을 종료 합니다.");
			return ;
		}
	}


}


int random() {
	// 랜덤 엔진 생성
	std::random_device rd;  // 시드 값 생성
	std::mt19937 gen(rd()); // Mersenne Twister 엔진
	std::uniform_int_distribution<> dist(1, game_size); // 1부터 100까지 균등 분포

	// 랜덤 숫자 생성 및 출력
	for (int turn = 0; turn < mine_count; ++turn) {
		int randomNumber = dist(gen);
		printf("랜덤 숫자: %d\n", randomNumber);
	}

	return 0;
}

