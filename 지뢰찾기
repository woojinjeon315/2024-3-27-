}

int start() {
	int input = 0;
	int stop = 0;
		puts("---------------------");
		puts("지뢰찾기");
		puts("1번 : 게임시작");
		puts("2번 : 설정");
		puts("3번 : 종료");

		puts("---------------------");

		while (stop != 1) {
			puts("번호를 입력해 주세요.");
			scanf_s("d", &input);
			getchar();

			if (input == 1 || input == 2 || input == 3) {
				stop = 1;
			}
			else {
				puts("번호를 다시 입력해 주세요.");
			}
		}
		return input;
}

int setting() {
