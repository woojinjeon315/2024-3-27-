		puts("번호를 입력해 주세요.");
		scanf_s("d", &input);
		getchar();

		if (input == 1) {
			//stop = 1;
			puts("크기를 3 ~ 100 사이로 입력해 주세요.");
			scanf_s("d", &input);
			if (input <= 3 &&)
				x_size = input;
		}
		else if (input == 2) {

		}
		else if (input == 3) {

		}
		else if (input == 4) {

		}
		else {
			puts("번호를 다시 입력해 주세요.");
		}
	}
	return input;
}

