void main() {
	int stop = 0;
	while (stop == 0) {
		start_select = start();
		if (start_select == 1) {
			//game_play();
			stop = 1;
		}
		else if (start_select == 2) {
			setting();
		}
		else if (start_select == 3) {
			puts("프로그램을 종료 합니다.");
			return ;
		}
	}


}
