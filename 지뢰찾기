			//game_play();
			stop = 1;
		}
		else if (start_select == 1) {
			//setting_select = setting();
			if (setting_select == 1) {

			}
			else if (setting_select == 2) {

			}
			else if (setting_select == 3) {

			}
			else if (setting_select == 4) {

			}


		}
		else if (start_select == 3) {
			puts("프로그램을 종료 합니다.");
			return ;
