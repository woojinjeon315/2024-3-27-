#include <stdio.h>

void base_print() {
	union val {
		int s1;
		int s2_1;
		int s2_2;

	};

	union val u_v;
	//int s1;
	//int s2_1;
	//int s2_2;


	printf("도형의 타입을 입력하시오(0, 1, 2) : Wn");
	scanf_s("&d", &u_v.s1);

	if (u_v.s1 == 0) { // 삼각형
		printf("밑변과 높이를 입력하시오(예를 들어서 100 200) : Wn");
	}
	else if (u_v.s1 == 1) {// 직사각형
		printf("가로와 세로를 입력하시오(예를 들어서 100 200) : Wn");
	}
	else if (u_v.s1 == 2) { // 원
		printf("반지름을 입력하시오(예를 들어서 100 200) : Wn");
	}

}

#include <stdio.h>

	union val {
		int s1;
		int s2;
		int s3;

	};
	union val u_v;
	enum figure { triangle = 0, quadrangle = 0, circle = 0};

void base_print() {

	int right_select = 0;

	//int s1;
	//int s2_1;
	//int s2_2;


	printf("도형의 타입을 입력하시오(0, 1, 2) : \n");
	scanf_s("&d", &u_v.s1);

	while (right_select == 0) {
		if (u_v.s1 == 0) { // 삼각형
			printf("밑변과 높이를 입력하시오(예를 들어서 100 200) : \n");
			scanf_s("&d", &u_v.s2);

			right_select = 1;
		}
		else if (u_v.s1 == 1) {// 직사각형
			printf("가로와 세로를 입력하시오(예를 들어서 100 200) : \n");
			scanf_s("&d", &u_v.s2);

			right_select = 1;
		}
		else if (u_v.s1 == 2) { // 원
			printf("반지름을 입력하시오(예를 들어서 100 200) : \n");
			scanf_s("&d", &u_v.s2);
			right_select = 1;
		}
		else {
			printf("0, 1, 2 중 하나를 입력해 주세요.");
			scanf_s("&d", &u_v.s1);
		}
	}

}

void area() {
	 = u_v.s2* u_v.s2
}

void main() {
	base_print();
}
